{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2022",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src"],
    "baseUrl": "src",
    "strict": false,
    "paths": {
      "*": ["src/*"],
      "data/*": ["data/*"],
      "domain/*": ["domain/*"],
      "infra/*": ["infra/*"],
      "main/*": ["main/*"],
      "presentation/*": ["presentation/*"],
      "validation/*": ["validation/*"],
      "tests/*": ["../tests/*"]
    }
  },
  "include": ["src"],
  "exclude": []
}
