{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2022",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src"],
    "baseUrl": "src",
    "strict": false,
    "paths": {
      "src/*": ["src/*"],
      "src/data/*": ["data/*"],
      "src/domain/*": ["domain/*"],
      "src/infra/*": ["infra/*"],
      "src/main/*": ["main/*"],
      "src/presentation/*": ["presentation/*"],
      "src/validation/*": ["validation/*"],
      "tests/*": ["../tests/*"]
    }
  },
  "include": ["src"],
  "exclude": []
}
